{
  "name": "syncing-server-js",
  "version": "1.0.0",
  "engines": {
    "node": ">=12.0.0 <14.0.0"
  },
  "description": "Syncing Server JS",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "repository": "git@github.com:standardnotes/syncing-server-js.git",
  "author": "Karol SÃ³jko <karolsojko@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rm -fr dist",
    "prebuild": "yarn clean",
    "build": "tsc --rootDir ./",
    "lint": "eslint . --ext .ts",
    "coverage": "jest --coverage --maxWorkers=2 --no-cache spec --reporters=\"default\" \"jest-junit\"",
    "pretest": "yarn lint && yarn build",
    "test": "jest spec",
    "start": "node dist/bin/server.js"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.5",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "prettyjson": "^1.2.1",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/inversify-express-utils": "^2.0.0",
    "@types/jest": "^26.0.15",
    "@types/prettyjson": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.13.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "pre-push": "^0.1.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "pre-push": [
    "lint",
    "coverage"
  ],
  "jest-junit": {
    "output": "./coverage/junit/junit.xml"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/Types.ts"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/Bootstrap/",
      "HealthCheckController",
      "/InMemory/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
